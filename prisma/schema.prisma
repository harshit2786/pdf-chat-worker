generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement()) @unique
  name      String
  avatar    String  @default("avatar1")
  email     String  @unique
  password  String
  folders   Folder[]
  pdfs      Pdfs[]
}

model Folder {
  id            Int @id @default(autoincrement()) @unique
  name          String
  description   String
  createdAt     Int
  color         String
  userId        Int
  user          User  @relation(references: [id], fields: [userId])
  pdfs          Pdfs[]
}

model Pdfs {
  id          Int @id @default(autoincrement()) @unique
  fileName    String
  url         String
  status      Status
  totalPages  Int
  uploadedAt  Int
  userId      Int
  folderId    Int
  user        User @relation(fields: [userId],references: [id])
  folder      Folder @relation(fields: [folderId] , references: [id])
}

enum Status {
  INQUEUE
  PROCESSED
}